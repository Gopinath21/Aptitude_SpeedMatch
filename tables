        </div>
        <!-- End Game Tab Content -->

        <!-- Tables Tab Content -->
        <div class="tab-content" id="tablesTab">
            <div class="operation-toggle">
                <button class="toggle-btn active" data-operation="mult">Multiplication Tables</button>
                <button class="toggle-btn" data-operation="div">Division Tables</button>
            </div>

            <button class="show-all-btn" id="showAllBtn">Show All Tables (2-20)</button>

            <div class="table-selector" id="tableSelector">
                <!-- Table number buttons will be generated here -->
            </div>

            <div class="tables-container" id="tablesContainer">
                <!-- Tables will be generated here -->
            </div>

            <div class="all-tables-view" id="allTablesView">
                <!-- All tables will be shown here -->
            </div>
        </div>
        <!-- End Tables Tab Content -->
    </div>

    <script>
        // Game State
        let gameState = {
            difficulty: 'easy',
            operation: 'multiplication',
            currentQuestion: 0,
            score: 0,
            questions: [],
            answers: [],
            mistakes: [],
            startTime: null,
            timerInterval: null
        };

        // Table State
        let tableState = {
            currentOperation: 'mult',
            selectedTable: null,
            showingAll: false
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initializeTabs();
            generateTableSelector();
            setupTableListeners();
        });

        // Tab Navigation
        function initializeTabs() {
            const tabBtns = document.querySelectorAll('.tab-btn');
            tabBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const tabName = btn.dataset.tab;
                    switchTab(tabName);
                });
            });

            // Show game tab by default
            switchTab('game');
        }

        function switchTab(tabName) {
            // Update buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.tab === tabName) {
                    btn.classList.add('active');
                }
            });

            // Update content
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            if (tabName === 'game') {
                document.getElementById('gameTab').classList.add('active');
            } else if (tabName === 'tables') {
                document.getElementById('tablesTab').classList.add('active');
            }
        }

        // Generate Table Selector Buttons
        function generateTableSelector() {
            const selector = document.getElementById('tableSelector');
            selector.innerHTML = '';

            for (let i = 2; i <= 20; i++) {
                const btn = document.createElement('button');
                btn.className = 'table-number-btn';
                btn.textContent = i;
                btn.dataset.table = i;
                btn.addEventListener('click', () => {
                    selectTable(i);
                });
                selector.appendChild(btn);
            }
        }

        function setupTableListeners() {
            // Operation toggle
            document.querySelectorAll('.toggle-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    tableState.currentOperation = btn.dataset.operation;
                    
                    if (tableState.selectedTable) {
                        generateSingleTable(tableState.selectedTable);
                    } else if (tableState.showingAll) {
                        generateAllTables();
                    }
                });
            });

            // Show all button
            document.getElementById('showAllBtn').addEventListener('click', () => {
                tableState.showingAll = !tableState.showingAll;
                const btn = document.getElementById('showAllBtn');
                
                if (tableState.showingAll) {
                    btn.textContent = 'Show Table Selector';
                    document.getElementById('tableSelector').style.display = 'none';
                    document.getElementById('tablesContainer').style.display = 'none';
                    document.getElementById('allTablesView').classList.add('active');
                    generateAllTables();
                } else {
                    btn.textContent = 'Show All Tables (2-20)';
                    document.getElementById('tableSelector').style.display = 'flex';
                    document.getElementById('tablesContainer').style.display = 'block';
                    document.getElementById('allTablesView').classList.remove('active');
                }
            });
        }

        function selectTable(number) {
            tableState.selectedTable = number;
            tableState.showingAll = false;
            
            // Update button states
            document.querySelectorAll('.table-number-btn').forEach(btn => {
                btn.classList.remove('selected');
                if (parseInt(btn.dataset.table) === number) {
                    btn.classList.add('selected');
                }
            });

            generateSingleTable(number);
        }

        function generateSingleTable(number) {
            const container = document.getElementById('tablesContainer');
            const isMult = tableState.currentOperation === 'mult';
            const symbol = isMult ? '√ó' : '√∑';
            const title = isMult ? 'Multiplication' : 'Division';

            let html = `<div class="math-table">
                <h3>${title} Table of ${number}</h3>
                <div class="table-grid">`;

            for (let i = 1; i <= 20; i++) {
                let equation, result;
                if (isMult) {
                    equation = `${number} ${symbol} ${i}`;
                    result = number * i;
                } else {
                    const dividend = number * i;
                    equation = `${dividend} ${symbol} ${number}`;
                    result = i;
                }

                html += `<div class="table-row">
                    <span class="equation">${equation} = </span>
                    <span class="result">${result}</span>
                </div>`;
            }

            html += `</div></div>`;
            container.innerHTML = html;
        }

        function generateAllTables() {
            const container = document.getElementById('allTablesView');
            const isMult = tableState.currentOperation === 'mult';
            const symbol = isMult ? '√ó' : '√∑';
            const title = isMult ? 'Multiplication' : 'Division';

            let html = `<h2 style="text-align: center; color: #667eea; margin-bottom: 20px;">All ${title} Tables (2-20)</h2>`;

            for (let num = 2; num <= 20; num++) {
                html += `<div class="math-table">
                    <h3>${title} Table of ${num}</h3>
                    <div class="table-grid">`;

                for (let i = 1; i <= 20; i++) {
                    let equation, result;
                    if (isMult) {
                        equation = `${num} ${symbol} ${i}`;
                        result = num * i;
                    } else {
                        const dividend = num * i;
                        equation = `${dividend} ${symbol} ${num}`;
                        result = i;
                    }

                    html += `<div class="table-row">
                        <span class="equation">${equation} = </span>
                        <span class="result">${result}</span>
                    </div>`;
                }

                html += `</div></div>`;
            }

            container.innerHTML = html;
        }

        // Difficulty ranges
        const difficultyRanges = {
            easy: { min: 1, max: 10 },
            medium: { min: 1, max: 15 },
            hard: { min: 1, max: 20 }
        };

        // Setup event listeners
        document.querySelectorAll('.difficulty-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.difficulty-btn').forEach(b => b.classList.remove('selected'));
                btn.classList.add('selected');
                gameState.difficulty = btn.dataset.difficulty;
            });
        });

        document.querySelectorAll('.operation-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.operation-btn').forEach(b => b.classList.remove('selected'));
                btn.classList.add('selected');
                gameState.operation = btn.dataset.operation;
            });
        });

        document.querySelector('.start-btn').addEventListener('click', startGame);
        document.getElementById('submitBtn').addEventListener('click', submitAnswer);
        document.getElementById('answerInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') submitAnswer();
        });
        document.getElementById('retryBtn').addEventListener('click', () => {
            startGame();
        });
        document.getElementById('newChallengeBtn').addEventListener('click', () => {
            showScreen('setup');
        });

        function showScreen(screen) {
            document.querySelectorAll('.setup-screen, .game-screen, .results-screen').forEach(s => {
                s.classList.remove('active');
            });
            document.querySelector(`.${screen}-screen`).classList.add('active');
        }

        function generateQuestions() {
            const questions = [];
            const range = difficultyRanges[gameState.difficulty];
            
            for (let i = 0; i < 10; i++) {
                let num1 = Math.floor(Math.random() * (range.max - range.min + 1)) + range.min;
                let num2 = Math.floor(Math.random() * (range.max - range.min + 1)) + range.min;
                
                let operation = gameState.operation;
                if (operation === 'mixed') {
                    operation = Math.random() < 0.5 ? 'multiplication' : 'division';
                }
                
                if (operation === 'division') {
                    // For division, ensure clean division (no remainders)
                    const product = num1 * num2;
                    questions.push({
                        num1: product,
                        num2: num2,
                        operation: 'division',
                        answer: num1
                    });
                } else {
                    questions.push({
                        num1: num1,
                        num2: num2,
                        operation: 'multiplication',
                        answer: num1 * num2
                    });
                }
            }
            
            return questions;
        }

        function startGame() {
            gameState.currentQuestion = 0;
            gameState.score = 0;
            gameState.questions = generateQuestions();
            gameState.answers = [];
            gameState.mistakes = [];
            gameState.startTime = Date.now();
            
            showScreen('game');
            startTimer();
            displayQuestion();
        }

        function startTimer() {
            if (gameState.timerInterval) {
                clearInterval(gameState.timerInterval);
            }
            
            gameState.timerInterval = setInterval(() => {
                const elapsed = Math.floor((Date.now() - gameState.startTime) / 1000);
                document.getElementById('timer').textContent = elapsed + 's';
            }, 1000);
        }

        function displayQuestion() {
            const question = gameState.questions[gameState.currentQuestion];
            const symbol = question.operation === 'multiplication' ? '√ó' : '√∑';
            
            document.getElementById('questionText').textContent = 
                `${question.num1} ${symbol} ${question.num2} = ?`;
            document.getElementById('questionNumber').textContent = 
                `${gameState.currentQuestion + 1}/10`;
            document.getElementById('currentScore').textContent = gameState.score;
            document.getElementById('answerInput').value = '';
            document.getElementById('feedback').textContent = '';
            document.getElementById('feedback').className = 'feedback';
            document.getElementById('answerInput').focus();
            
            // Update progress bar
            const progress = ((gameState.currentQuestion) / 10) * 100;
            document.querySelector('.progress-fill').style.width = progress + '%';
        }

        function submitAnswer() {
            const userAnswer = parseInt(document.getElementById('answerInput').value);
            const question = gameState.questions[gameState.currentQuestion];
            const feedback = document.getElementById('feedback');
            
            if (isNaN(userAnswer)) {
                feedback.textContent = 'Please enter a number!';
                feedback.className = 'feedback incorrect';
                return;
            }
            
            const isCorrect = userAnswer === question.answer;
            
            gameState.answers.push({
                question: question,
                userAnswer: userAnswer,
                correct: isCorrect
            });
            
            if (isCorrect) {
                gameState.score++;
                feedback.textContent = '‚úì Correct! Well done!';
                feedback.className = 'feedback correct';
            } else {
                feedback.textContent = `‚úó Incorrect. The answer is ${question.answer}`;
                feedback.className = 'feedback incorrect';
                gameState.mistakes.push({
                    question: question,
                    userAnswer: userAnswer
                });
            }
            
            document.getElementById('currentScore').textContent = gameState.score;
            
            setTimeout(() => {
                gameState.currentQuestion++;
                if (gameState.currentQuestion < 10) {
                    displayQuestion();
                } else {
                    endGame();
                }
            }, 1500);
        }

        function endGame() {
            clearInterval(gameState.timerInterval);
            const totalTime = Math.floor((Date.now() - gameState.startTime) / 1000);
            
            showScreen('results');
            
            document.getElementById('finalScore').textContent = `${gameState.score}/10`;
            document.getElementById('timeDisplay').textContent = `Completed in ${totalTime} seconds`;
            
            // Performance badge
            const badge = document.getElementById('performanceBadge');
            if (gameState.score >= 9) {
                badge.textContent = 'üåü Excellent! Math Master!';
                badge.className = 'performance-badge badge-excellent';
            } else if (gameState.score >= 7) {
                badge.textContent = 'üëç Good Job! Keep Practicing!';
                badge.className = 'performance-badge badge-good';
            } else {
                badge.textContent = 'üìö Needs Practice - You Can Do It!';
                badge.className = 'performance-badge badge-needs-practice';
            }
            
            // Show mistakes if any
            if (gameState.mistakes.length > 0) {
                document.getElementById('mistakeReview').style.display = 'block';
                const mistakesList = document.getElementById('mistakesList');
                mistakesList.innerHTML = '';
                
                gameState.mistakes.forEach((mistake, index) => {
                    const symbol = mistake.question.operation === 'multiplication' ? '√ó' : '√∑';
                    const div = document.createElement('div');
                    div.className = 'mistake-item';
                    div.innerHTML = `
                        <strong>${mistake.question.num1} ${symbol} ${mistake.question.num2} = ?</strong><br>
                        Your answer: ${mistake.userAnswer} | Correct answer: ${mistake.question.answer}
                    `;
                    mistakesList.appendChild(div);
                });
            } else {
                document.getElementById('mistakeReview').style.display = 'none';
            }
            
            // Generate improvements
            generateImprovements();
        }

        function generateImprovements() {
            const improvements = [];
            const avgTime = Math.floor((Date.now() - gameState.startTime) / 10000);
            
            if (gameState.score < 7) {
                improvements.push('Practice times tables daily - spend 10-15 minutes each day');
                improvements.push('Use flashcards to memorize difficult combinations');
                improvements.push('Try the "skip counting" technique (2, 4, 6, 8...)');
            }
            
            if (gameState.score >= 7 && gameState.score < 9) {
                improvements.push('Great progress! Focus on the questions you got wrong');
                improvements.push('Try the next difficulty level once you master this one');
                improvements.push('Practice with timed drills to improve speed');
            }
            
            if (gameState.score >= 9) {
                improvements.push('Outstanding! Challenge yourself with harder difficulty');
                improvements.push('Try mixed operations to master both multiplication and division');
                improvements.push('Help others learn - teaching reinforces your knowledge');
            }
            
            if (avgTime > 4) {
                improvements.push('Work on speed - try to answer each question in under 3 seconds');
                improvements.push('Practice mental math to calculate faster');
            }
            
            if (gameState.operation === 'division' && gameState.mistakes.length > 2) {
                improvements.push('Remember: Division is the opposite of multiplication');
                improvements.push('Practice division by thinking: "What times this equals that?"');
            }
            
            if (gameState.mistakes.some(m => m.question.num1 > 10 || m.question.num2 > 10)) {
                improvements.push('Break down larger numbers: 12 √ó 7 = (10 √ó 7) + (2 √ó 7)');
            }
            
            improvements.push('Keep practicing daily - consistency is key to mastery!');
            
            const list = document.getElementById('improvementsList');
            list.innerHTML = '';
            improvements.forEach(tip => {
                const li = document.createElement('li');
                li.textContent = tip;
                list.appendChild(li);
            });
        }
    </script>
</body>
</html>
